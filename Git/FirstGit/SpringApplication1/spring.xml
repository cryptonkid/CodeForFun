<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
<bean id="gs1" class="com.springapp1.beans.GreetingsServiceImpl" scope="singleton" lazy-init="default">
<property name="greetMessage" value="GoodMorning"></property>
</bean>
<bean id="gs2" class="com.springapp1.beans.GreetingsServiceImpl" scope="singleton" lazy-init="default">
<constructor-arg><value>GoodEvening</value></constructor-arg>
</bean>

</beans>
